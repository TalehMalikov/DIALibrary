@model ExternalSourceViewModel
@{
    Layout = "_Layout";
}

<div class="d-flex justify-content-end">
    <a asp-action="SaveSource" class="btn btn-primary align-self-end" asp-route-id="0" asp-controller="ExternalSource">Create</a>
</div>
<hr />

<div class="container-fluid align-items-baseline justify-content-center d-flex flex-wrap">

    @{
        foreach (var item in Model.SourceList)
        {
            <div class="card m-sm-1" style="width: 18rem;">
                <img class="card-img-top" src="@Url.Action("GetPhoto", "ExternalSource", new { path = item.PhotoPath })" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <a href="@item.SourceLink" class="text link">Source link</a>
                    <hr/>
                    <a asp-action="SaveSource" asp-controller="ExternalSource" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger delete" data-controller="ExternalSource" data-action="Delete" data-id="@item.Id">Delete</a>
                </div>
            </div>
        }

    }
</div>

@section Scripts{
   
    <script src="@Href("~/js/section.js")"></script>
}