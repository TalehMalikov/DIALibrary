@model UserViewModel

<div class="modal-dialog modal-dialog-scrollable modal-lg">
    <!-- Modal content -->
    <div class="modal-content" id="editDebtModelBody">
        <div style="overflow:auto;" class="modal-body">
            <form asp-controller="User" asp-action="SaveUser" class="form-group">
                <input hidden asp-for="@Model.User.Id" />

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Ad:</label>
                    <input asp-for="@Model.User.FirstName" class="form-control mb-2 mr-sm-2" required/>
                    <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Soyad:</label>
                    <input asp-for="@Model.User.LastName" class="form-control mb-2 mr-sm-2" required />
                    <span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label for="name" class="mr-sm-2">Ata adı:</label>
                    <input asp-for="@Model.User.FatherName" class="form-control mb-2 mr-sm-2" required />
                    <span asp-validation-for="@Model.User.FatherName" class="text-danger"></span>
                </div>
                
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="name" class="mr-sm-2">Doğum tarixi:</label>
                        <input asp-for="@Model.User.BirthDate" class="form-control mb-2 mr-sm-2" type="date" required/>
                    </div>

                    <div class="col-sm-6">

                        <label for="statusSelectList">Status:</label>
                        <select asp-for="User.IsDeleted" class="form-control" id="statusSelectList">
                            <option value="false">Aktiv</option>
                            <option value="true">Bloklamaq</option>
                        </select>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-sm-6 d-flex justify-content-evenly">
                        <div class="mr-sm-3">
                            @Html.RadioButtonFor(model => model.User.Gender, false)
                            <label for="gender">Kişi</label><br>
                        </div>
                        
                        <div>
                            @Html.RadioButtonFor(model => model.User.Gender, true)
                            <label for="gender">Qadın</label>
                        </div>
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary bgupdate">Yadda saxla</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />