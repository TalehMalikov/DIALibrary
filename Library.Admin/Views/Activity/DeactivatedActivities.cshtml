@model ActivityViewModel
@{
    Layout = "_Layout";
}

<div class="container-fluid mb-sm-3">
    <div class="d-flex flex-wrap justify-content-center">
        @{
            foreach (var item in Model.Activities)
            {
                <div class="col-sm-12 col-3 col-lg-3 d-flex flex-column card mr-sm-2 mb-sm-1">
                    <h6 class="card-header text-center">@item.Title</h6>
                    <div class="card-body d-flex justify-content-aroundly align-items-center flex-column">
                        <p class="card-text text-justify">@item.Content.Substring(0,135) ...</p>
                        <div class="d-flex justify-content-evenly w-100">
                            <a class="btn btn-danger  delete" data-toggle="modal" data-target="#deleteModal" data-action="DeleteFromDb" data-controller="Activity" data-id="@item.Id">Silmək</a>
                            <a asp-action="Activate" asp-controller="Activity" class="btn btn-primary ml-sm-1 mr-sm-1 px-sm-3" asp-route-id="@item.Id">Activate</a>
                            <a asp-action="ShowActivity" asp-controller="Activity" class="btn btn-primary px-sm-2" asp-route-id="@item.Id">Show</a>
                        </div>
                    </div>

                </div>
            }
        }

    </div>

</div>
@section Scripts{
    <script src="~/js/section.js"></script>

}