@model AuthViewModel
@{
    Layout = "_Layout";
}
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5 p-5">
            <div class="p-5 container-">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2 title-forgot">Parolu yeniləmək</h1>
                       
                </div>
                <hr/>
                <form class="user" asp-action="ChangePassword" asp-controller="Authentication" asp-antiforgery="true">
                    <div class="form-group row">
                        <label for="passwd">Parol:</label>
                        <input type="password" class="form-control" id="passwd" asp-for="Password" />
                    </div>
                    <div class="form-group row">
                        <label for="repeatPassword">Parol təkrar:</label>
                        <input type="password" class="form-control" id="repeatPassword" asp-for="RepeatPassword"/>
                    </div>
                    
                    <button type="submit" class="text-bold btn btn-primary btn-user btn-block">
                        Submit
                    </button>
                    
                </form>
              
            </div>
        </div>
    </div>
</div>