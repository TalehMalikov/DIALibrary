@model AuthViewModel
@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2 title-forgot">İstifadəçinin hesab adını daxil edin</h1>
                       
                </div>
                <form class="user" asp-action="ChangePassword" asp-controller="Authentication" asp-antiforgery="true">
                    <div class="form-group">
                        <label for="passwd">Parol:</label>
                        <input type="password" class="form-control col-6" id="passwd" />
                    </div>
                    <div class="form-group">
                        <label for="repeatPassword">Parol təkrar:</label>
                        <input type="password" class="form-control col-6" id="repeatPassword"/>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Parolu sıfırla
                    </button>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>