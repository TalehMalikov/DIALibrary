@model AuthViewModel;
<div>
    <div class="container-lg">
        <div class="row justify-content-center">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-2 title-forgot">İstifadəçinin hesab adını daxil edin</h1>
                       
                    </div>
                    <form class="user" asp-action="UpdatePassword" asp-controller="Authentication">
                        <div class="form-group">
                            <input type="email" class="form-control form-control-user"
                                   id="exampleInputEmail" aria-describedby="emailHelp" asp-for="@Model.AccountName">
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Parolu sıfırla
                        </button>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>