@model AuthViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>ADMIN</title>
<link rel = "icon" href = "@Href("~/img/logo.png")">
<link rel="stylesheet" href="@Href("~/css/login.css")">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

        
<div class="container">
    
    <form asp-action="Login" asp-controller="Authentication" method="post">
        <div class="login">
            <div class="login-area">
                <h2>ADMIN</h2>
                <div class="input-group">
                    <input type="text" class="user" placeholder="Username" required asp-for="@Model.AccountLoginDto.Email">
                    <i class="fa fa-user-alt"></i>
                </div>

                <div class="input-group">
                        <input type="password" class="pass" placeholder="Password" required asp-for="@Model.AccountLoginDto.Password">
                    <i class="fa fa-key"></i>
                </div>

                <button type="submit" class="btn">Log In</button>
            </div>
        </div>
    </form>
    
</div>

<script src="@Href("~/js/login.js")"></script>
</body>
</html>