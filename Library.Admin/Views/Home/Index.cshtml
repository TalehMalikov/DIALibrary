@model HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--First Content Row -->
<div class="row">

    <!-- Ümumi istifadəçilər -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Ümumi istifadəçilər
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                    </div>
                    <a class="col-auto" asp-action="ShowUsers" asp-controller="User">
                        <i class="fas fa-user fa-2x "></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Adminlər -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            <a asp-controller="AccountRole" asp-action="ShowAdmins">
                                Adminlər
                            </a>
                            
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAdmins</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fa fa-user-secret fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tələbələr -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Tələbələr
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.TotalStudents</div>
                            </div>
                        </div>
                    </div>
                    <a class="col-auto" asp-controller="Student" asp-action="ShowStudents">
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ümumi resurslar -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Ümumi resurslar
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalResources</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-folder fa-2x "></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Second -->
<div class="row">

    <!-- Fiziki kitablar -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Fiziki kitablar
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PhysicalBooks</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-book fa-2x "></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Elektron kitablar -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Elekron kitablar
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ElectronicBooks</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-atlas fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Fiziki məqalələr -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Fiziki məqalələr
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.PhysicalArticles</div>
                            </div>
                        </div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-newspaper fa-2x "></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Elektron məqalələr -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Elektron məqalələr
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ElectronicArticles</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-file-pdf fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Third -->
<div class="row">

    <!-- Jurnallar -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Jurnallar
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalJournals</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-file-alt fa-2x "></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Nəşrlərimiz
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.OurPublications</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-book fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Avtoreferatlar -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Avtoreferatlar
                        </div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">@Model.Abstracts</div>
                            </div>
                        </div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-scroll fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Dərslik, dərs vəsaitləri -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Dərsliklər
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TextBooks</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-book-open fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Fourth -->
<div class="row">

    <!-- Fənn proqramları -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Fənn proqramları
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.EducationalPrograms</div>
                    </div>
                    <a class="col-auto" href="#">
                        <i class="fas fa-list fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>


</div>
