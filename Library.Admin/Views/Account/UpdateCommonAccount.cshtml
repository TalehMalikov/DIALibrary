@model AccountViewModel
<div class="modal-dialog">
    <div class="modal-content" id="editDebtModelBody">
        <div style="overflow:auto;" class="modal-body">
            <form asp-controller="Account" asp-antiforgery="true" asp-action="UpdateCommonAccount" class="form-group">
                <input hidden asp-for="AccountRole.Account.Id" />
                <input hidden asp-for="AccountRole.Account.User.Id" />
                <input hidden asp-for="AccountRole.Account.PasswordHash" />
                <input hidden asp-for="AccountRole.Account.User.IsStudent" />

                <div class="form-group">
                    <label for="userFirstName" class="mr-sm-2">Adı:</label>
                    <input asp-for="AccountRole.Account.User.FirstName" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="AccountRole.Account.User.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="userLastName" class="mr-sm-2">Soyadı:</label>
                    <input asp-for="AccountRole.Account.User.LastName" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="AccountRole.Account.User.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="userFatherName" class="mr-sm-2">Ata adı:</label>
                    <input asp-for="AccountRole.Account.User.FatherName" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="AccountRole.Account.User.FatherName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="userBirthdate" class="mr-sm-2">Doğum tarixi:</label>
                    <input asp-for="AccountRole.Account.User.BirthDate" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="AccountRole.Account.User.BirthDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Hesab adı:</label>
                    <input asp-for="AccountRole.Account.AccountName" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="AccountRole.Account.AccountName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="address" class="mr-sm-2">Email adresi:</label>
                    <input asp-for="AccountRole.Account.Email" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="AccountRole.Account.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="userBirthdate" class="mr-sm-2">Cins:</label>
                    <div class="col-sm-6 d-flex">
                        <div class="mr-sm-3 mr-4">
                            @Html.RadioButtonFor(model => model.AccountRole.Account.User.Gender, false)
                            <label for="gender">Kişi</label><br>
                        </div>

                        <div>
                            @Html.RadioButtonFor(model => model.AccountRole.Account.User.Gender, true)
                            <label for="gender">Qadın</label>
                        </div>

                    </div>
                </div>
                
                 @if (@Model.AccountRole.Account.User.IsStudent)
                    {
                        <input hidden asp-for="StudentDto.Id" />
                        <input hidden asp-for="StudentDto.UserId" />

                        <div class="form-group">
                            <label for="name" class="mr-sm-2">İxtisas:</label>
                            @Html.DropDownListFor(s=> s.StudentDto.SpecialtyId, Model.SpecialtyList,new {@class="custom-select form-control"})
                        </div>

                        <div class="form-group">
                            <label for="name" class="mr-sm-2">Qrup:</label>
                            @Html.DropDownListFor(s=> s.StudentDto.GroupId, Model.GroupList,new {@class="custom-select form-control"})
                        </div>

                        <div class="form-group">
                            <label for="userBirthdate" class="mr-sm-2">Daxilolma tarixi:</label>
                            <input asp-for="StudentDto.AcceptanceDate" class="form-control mb-2 mr-sm-2" />
                            <span asp-validation-for="StudentDto.AcceptanceDate" class="text-danger"></span>
                        </div>
                    }

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary bgupdate">Yadda saxla</button>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />