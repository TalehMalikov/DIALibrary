@model AccountViewModel
@{
    Layout = "_Layout";
}

<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Hesab əlavə et!</h1>
    </div>
    <form class="user" asp-antiforgery="true">
        <div class="form-group">
            <select class="form-select btn-block form-control-register" asp-for="AccountDto.UserId">
                <option selected>--İstifadəçi seçin--</option>
            </select>
        </div>

        <!-- Hesab,email -->
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="accountname" class="form-control form-control-register" id="exampleInputEmail"
                       placeholder="Hesab adı" asp-for="@Model.AccountDto.AccountName">
            </div>
            <div class="col-sm-6">
                <input type="email" class="form-control form-control-register" id="exampleInputEmail"
                       placeholder="Email adresi" asp-for="@Model.AccountDto.Email">
            </div>
        </div>

        <!-- Password -->
        <div class="form-group row">
            <div class="col-sm-6 mb-3 mb-sm-0">
                <input type="password" class="form-control form-control-register"
                       id="exampleInputPassword" placeholder="Parol" asp-for="@Model.Password">
            </div>
            <div class="col-sm-6">
                <input type="password" class="form-control form-control-register"
                       id="exampleRepeatPassword" placeholder="Parolu təkrarla" asp-for="@Model.RepeatPassword">
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-user btn-block">
            Qeydiyyatdan keç
        </button>
        <hr>

    </form>
</div>
