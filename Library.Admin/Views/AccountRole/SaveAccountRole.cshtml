@model AccountRoleViewModel

<div class="modal-dialog">
    <!-- Modal content -->
    <div class="modal-content" id="editDebtModelBody">
        <div style="overflow:auto;" class="modal-body">
            <form asp-controller="AccountRole" asp-action="SaveAccountRole" class="form-group" asp-antiforgery="true">
                
                @{
                    if (Model.AccountRole==null)
                    {
                        <div class="form-group row mb-sm-2">
                            <label for="name" class="mr-sm-2">İstifadəçi:</label>
                            <select class="form-control custom-select" asp-items="@Model.AccountList" asp-for="AccountRole.Account.Id">
                                <option value="0" selected>İstifadəçi seçin</option>
                            </select>
                        </div>
                    }
                    else
                    {
                        <input hidden asp-for="@Model.AccountRole.Id" />
                        <input hidden asp-for="@Model.AccountRole.Account.Id" />
                        <div class="form-group row mb-sm-2">
                            <label for="firstName" class="mr-sm-2">Ad:</label>
                            <input type="text" id="firstName" asp-for="AccountRole.Account.User.FirstName" class="form-control" readonly />
                        </div>
                        <div class="form-group row mb-sm-2">
                            <label for="lastName" class="mr-sm-2">Soyad:</label>
                            <input type="text" id="lastName" asp-for="AccountRole.Account.User.LastName" class="form-control" readonly />
                        </div>
                        <div class="form-group row mb-sm-2">
                            <label for="fatherName" class="mr-sm-2">Ata adı:</label>
                            <input type="text" id="fatherName" asp-for="AccountRole.Account.User.FatherName" class="form-control" readonly />
                        </div>
                        <div class="form-group row mb-sm-2">
                            <label for="accountName" class="mr-sm-2">Hesab adı:</label>
                            <input type="text" id="accountName" asp-for="AccountRole.Account.AccountName" class="form-control" readonly />
                        </div>
                    }
                }
                

                <div class="form-group row">
                    <label for="name" class="mr-sm-2">İmtiyaz:</label>
                    <select class="custom-select form-control" asp-items="@Model.RoleList" asp-for="@Model.AccountRole.Role.Id">
                        <option selected >İmtiyaz seçin</option>
                    </select>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary bgupdate">Yadda saxla</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
@section Scripts{
    <script>
        $(document).ready(function () {
            $('select').selectize({
                sortField: 'text'
            });
        });
    </script>
}
@section HeadLinks
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js" integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css" integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />

}
