@model AuthorViewModel;
@{
    ViewData["Title"] = "ShowAuthors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Müəlliflər</h1>
<p class="mp-4">
    <span class="pull-left">
        <button type="button" class="btn btn-primary float-right mb-2" name="submit" id="submit" data-toggle="modal" data-target="#addUserModal">Əlavə et</button>
    </span>
</p>
<br>

<div class="card shadow mb-4 w-100">
   
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Ata adı</th>
                        <th>Kitab sayı</th>
                        <th>Yenilə</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Authors)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.FatherName</td>
                            <td>@item.BookCount</td>
                            <td class="text-center"><a class="btn btn-primary px-sm-3" href="#">Yenilə</a></td>
                            <td class="text-center"><a class="btn btn-danger delete px-sm-3" data-id="@item.Id" data-toggle="modal" data-target="#deleteModal" data-controller="Faculty" data-action="Delete">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modals{
    <!-- Add User Modal - addUserModal -->
    <div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
        <form class="user" asp-action="Add" asp-controller="Author" asp-antiforgery="false">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Müəllif əlavə et</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group row d-flex justify-content-center">
                            <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Adı :" asp-for="@Model.Author.FirstName">
                                   <span asp-validation-for="@Model.Author.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row d-flex justify-content-center">
                            <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Soyadı :" asp-for="@Model.Author.LastName">
                                   <span asp-validation-for="@Model.Author.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row d-flex justify-content-center">
                            <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Ata adı :" asp-for="@Model.Author.FatherName">
                                   <span asp-validation-for="@Model.Author.FatherName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row d-flex justify-content-center">
                            <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                                <input class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Kitab sayı :" asp-for="@Model.Author.BookCount">
                                   <span asp-validation-for="@Model.Author.BookCount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row d-flex justify-content-center">
                            <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Cinsi :" asp-for="@Model.Author.Gender">
                                   <span asp-validation-for="@Model.Author.Gender" class="text-danger"></span>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label for="name" class="mr-sm-2">Soyadı :</label>
                            <input asp-for="@Model.Author.LastName" class="form-control mb-2 mr-sm-2" />
                            <span asp-validation-for="@Model.Author.LastName" class="text-danger"></span>
                        </div>*@

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success" type="submit" >Təsdiqlə</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Ləğv et</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
}

    @section Scripts{

    <script src="@Href("~/js/section.js")"></script>
}