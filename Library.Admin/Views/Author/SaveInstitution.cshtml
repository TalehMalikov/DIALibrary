@model AuthorViewModel;
@{
    Layout = "_Layout";
}
<div class="modal-dialog modal-dialog-scrollable">
    <!-- Modal content -->
    <div class="modal-content" id="editDebtModelBody">
        <div style="overflow:auto;" class="modal-body">
            <form asp-controller="Author" asp-action="SaveAuthor" class="form-group" asp-antiforgery="true">
                <div class="modal-body">
                    <input hidden asp-for="@Model.Author.Id" />
                    <div class="form-group row d-flex justify-content-center">
                        <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                            <input type="text" class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Example: Dövlət İdarəçilik Akademiyası" asp-for="@Model.Author.FirstName">
                            <span asp-validation-for="@Model.Author.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row d-flex justify-content-center">
                        <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                            <input type="text" class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Soyadı" asp-for="@Model.Author.LastName" hidden>
                        </div>
                    </div>
                    <div class="form-group row d-flex justify-content-center">
                        <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                            <input type="text" class="form-control form-control-register" hidden
                                   id="exampleInputFirstName" placeholder="Ata adı" asp-for="@Model.Author.FatherName">
                        </div>
                    </div>
                    <div class="form-group row d-flex justify-content-center">
                        <div class="col-sm-6 col-sm-10 mb-3 mb-sm-0">
                            <input class="form-control form-control-register"
                                   id="exampleInputFirstName" placeholder="Kitab sayı" asp-for="@Model.Author.BookCount">
                            <span asp-validation-for="@Model.Author.BookCount" class="text-danger"></span>
                        </div>
                    </div>
                    <input hidden type="radio" asp-for="Author.Gender"/>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">Yadda saxla</button>
                    <button class="btn btn-danger" type="button" data-dismiss="modal">Ləğv et</button>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
