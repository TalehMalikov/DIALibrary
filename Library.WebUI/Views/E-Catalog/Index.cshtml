@model CategoryFileViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DIA</title>
    <link rel="icon" href="~/images/logo.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
</head>

<body>

    <header>
        <div class="container-fluid">
            <nav class="navbar category-nav">

                <a class="logo" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" width="100rem" class="d-inline-block">
                    <span class="logo-text text-white">Azərbaycan Respublikası Prezidenti yanında Dövlət İdarəçilik
                        Akademiyası
                        Elekton Kitabxanası</span>
                </a>

            </nav>
        </div>
    </header>

    <section id="search">
        <form>
            <div class="container-fluid">
            <div class="search-div">
                <div class="top">
                    <div class="input-group">
                        <label class="input-group-text text-bold" for="inputGroupSelect01">Verilenler Bazasi</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Yeni Kitablar</option>
                            <option value="1">Dövri mətbuat (2017-2022)</option>
                            <option value="2">Dövri mətbuat (2004-2016)</option>
                            <option value="3">Avtoreferatlar</option>
                            <option value="4">BMT-nin depozitar fondu</option>
                            <option value="5">Elektron resurslar</option>
                            <option value="6">Qəzet və jurnal məqalələri</option>
                        </select>
                    </div>
                </div>
                <div class="bottom py-4">
                    <div class="input-group mb-3">
                        <span class="input-group-text text-bold" id="inputGroup-sizing-default">Kitab Adı</span>
                        <input type="text" class="form-control" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                        <input type="button" class="btn btn-primary" value="Axtar">
                    </div>

                    <div class="more d-inline-block">
                        <button class="btn btn-outline-danger rounded-0">
                            Daha cox <i class="fas fa-caret-down caret"></i>
                        </button>
                    </div>

                    <div class="more-div">
                        <div class="input-group my-3">
                            <span class="input-group-text text-bold" id="inputGroup-sizing-default">Müəllif</span>
                            <input type="text" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default">
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text text-bold" id="inputGroup-sizing-default">Kateqoriya</span>
                            <input type="text" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default">
                        </div>



                        <div class="input-group mb-3 w-50 w100">
                            <span class="input-group-text text-bold" id="inputGroup-sizing-default">Nəşr ili</span>
                            <input type="text" class="form-control mx-2" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default" placeholder="min">
                            <input type="text" class="form-control mx-3" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default" placeholder="max">
                        </div>

                        
                    </div>

                </div>
            </div>
        </div>
        </form>
    </section>

    <section id="bookResult" class="my-5 px-lg-3">
        <div class="container-fluid">
            <div class="book-result d-flex flex-column">
                <div class="book-div py-4">
                    <a href="bookread.html">
                        <img src="img/tarix.jpg" class="result-img">
                    </a>
                    <div class="book-info d-flex flex-column px-4 ">
                        <h6 class="h6"><span class="text-bold">Kitab Adı:</span>Almaniya və İtaliyanın ən yeni tarixi:
                            1918-2010-cu illər</h6>
                        <h6 class="h6"><span class="text-bold">Müəllif:</span>Mustafayeva Səmayə , Cavadova Zərifə , Hüseynli Raminə</h6>
                        <h6 class="h6"><span class="text-bold">Sehife:</span>289</h6>
                    </div>
                </div>

                <div class="book-div py-4">
                    <a href="bookread.html">
                        <img src="img/tarix.jpg" class="result-img">
                    </a>
                    <div class="book-info d-flex flex-column px-4 ">
                        <h6 class="h6"><span class="text-bold">Kitab Adı:</span>Almaniya və İtaliyanın ən yeni tarixi:
                            1918-2010-cu illər</h6>
                        <h6 class="h6"><span class="text-bold">Müəllif:</span>Mustafayeva Səmayə , Cavadova Zərifə , Hüseynli Raminə</h6>
                        <h6 class="h6"><span class="text-bold">Sehife:</span>289</h6>
                    </div>
                </div>

                <div class="book-div py-4">
                    <a href="bookread.html">
                        <img src="img/tarix.jpg" class="result-img">
                    </a>
                    <div class="book-info d-flex flex-column px-4 ">
                        <h6 class="h6"><span class="text-bold">Kitab Adı:</span>Almaniya və İtaliyanın ən yeni tarixi:
                            1918-2010-cu illər</h6>
                        <h6 class="h6"><span class="text-bold">Müəllif:</span>Mustafayeva Səmayə , Cavadova Zərifə , Hüseynli Raminə</h6>
                        <h6 class="h6"><span class="text-bold">Sehife:</span>289</h6>
                    </div>
                </div>

                <div class="book-div py-4">
                    <a href="bookread.html">
                        <img src="img/tarix.jpg" class="result-img">
                    </a>
                    <div class="book-info d-flex flex-column px-4 ">
                        <h6 class="h6"><span class="text-bold">Kitab Adı:</span>Almaniya və İtaliyanın ən yeni tarixi:
                            1918-2010-cu illər</h6>
                        <h6 class="h6"><span class="text-bold">Müəllif:</span>Mustafayeva Səmayə , Cavadova Zərifə , Hüseynli Raminə</h6>
                        <h6 class="h6"><span class="text-bold">Sehife:</span>289</h6>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <div class="top-btn">
        <i class="fas fa-arrow-alt-up"></i>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous">
    </script>
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    <script>
        const btnMore = document.querySelector('.more');
        const divMore = document.querySelector('.more-div');
        const arrowTop = document.querySelector('.caret');

        btnMore.addEventListener('click', () => {
            divMore.classList.toggle('block');
            arrowTop.classList.toggle('fa-caret-up');
            arrowTop.classList.toggle('fa-caret-down');
        })
    </script>
</body>

</html>