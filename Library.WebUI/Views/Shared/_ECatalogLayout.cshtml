@using Library.WebUI.ViewModels
@model ECatalogViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DIA</title>
    <link rel="icon" href="~/images/logo.png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css" />
</head>

<body>
    <header>
        <div class="container-fluid">
            <nav class="navbar category-nav">

                <a class="logo" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" width="100rem" class="d-inline-block">
                    <span class="logo-text text-white">Azərbaycan Respublikası Prezidenti yanında Dövlət İdarəçilik
                        Akademiyası
                        Elekton Kitabxanası</span>
                </a>

            </nav>
        </div>
    </header>

    <section id="search">
        <form asp-controller="File" asp-action="ECatalogFilter">
            <div class="container-fluid">
            <div class="search-div">
                <div class="top">
                    <div class="input-group">
                        <label class="input-group-text text-bold" for="inputGroupSelect01">Verilenler Bazasi</label>
                        @Html.DropDownListFor(s=> s.SelectedFileTypeId, Model.FileTypeList,new {@class="custom-select form-control"})
                    </div>
                </div>
                <div class="bottom py-4">
                    <div class="input-group mb-3">
                        <span class="input-group-text text-bold" id="inputGroup-sizing-default">Kitab Adı</span>
                        <input asp-for="BookFilter" type="text" class="form-control" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-default">
                        <button type="submit" class="btn btn-primary">Axtar</button>
                    </div>

                    <div class="more d-inline-block">
                        <a class="btn btn-outline-danger rounded-0">
                            Daha cox <i class="fas fa-caret-down caret"></i>
                        </a>
                    </div>

                    <div class="more-div">
                        <div class="input-group my-3">
                            <span class="input-group-text text-bold" id="inputGroup-sizing-default">Müəllif</span>
                            <input asp-for="AuthorFilter" type="text" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default">
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text text-bold" id="inputGroup-sizing-default">Kateqoriya</span>
                            @Html.DropDownListFor(s=> s.SelectedCategoryId, Model.CategoryList,new {@class="custom-select form-control"})
                        </div>

                        <div class="input-group mb-3 w-50 w100">
                            <span class="input-group-text text-bold" id="inputGroup-sizing-default">Nəşr ili</span>
                            <input asp-for="PublicationYearMin" type="text" class="form-control mx-2" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default" placeholder="min">
                            <input asp-for="PublicationYearMax" type="text" class="form-control mx-3" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-default" placeholder="max">
                        </div>
                        
                    </div>

                </div>
            </div>
        </div>
        </form>
    </section>

    @RenderBody()

    <script>
        const btnMore = document.querySelector('.more');
        const divMore = document.querySelector('.more-div');
        const arrowTop = document.querySelector('.caret');

        btnMore.addEventListener('click', () => {
            divMore.classList.toggle('block');
            arrowTop.classList.toggle('fa-caret-up');
            arrowTop.classList.toggle('fa-caret-down');
        })
    </script>
</body>
</html>




