@using Library.WebUI.ViewModels
@using System.Text
@model AccountViewModel;
@{
    Layout = "_PrivateOfficeLayout";
}

 <section id="account" class="my-5">
        <div class="container-fluid">
            <div class="book-result d-flex flex-column">
                @foreach (var educationalProgram in @Model.EducationalProgramViewModel.EducationalPrograms)
                {
                    <div class="book-div d-flex py-4">
                        <a asp-controller="File" asp-action="ShowEducationalProgramInfo" asp-route-guid="@educationalProgram.GUID">
                            <img src="~/images/educationalprogram.png" class="result-img">
                        </a>
                        <div class="book-info d-flex flex-column px-4 ">
                            <h6 class="h6"><span class="text-bold">Adı : </span>@educationalProgram.Name</h6>
                            <h6 class="h6"><span class="text-bold">Təhsil səviyyəsi : </span>@educationalProgram.EducationLevel</h6>
                            <h6 class="h6"><span class="text-bold">İxtisas : </span>@educationalProgram.Specialty.Name</h6>
                        </div>
                    </div>
                    <hr />
                }
            </div>
        </div>

    </section>

    <div class="top-btn">
        <i class="fas fa-arrow-alt-up"></i>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous">
    </script>
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>