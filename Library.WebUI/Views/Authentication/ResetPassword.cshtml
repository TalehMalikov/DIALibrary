@model PasswordViewModel
@{
    Layout = "_ForgotPasswordLayout";
}

<div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-2 title-forgot">Şifrənizi Dəyişin</h1>
                    </div>
                    <form class="user" method="post" asp-action="ResetPassword" asp-controller="Authentication">
                        <div class="form-group group">
                            <span>Yeni şifrə:</span>
                            <div class="group">
                                <i class="fas fa-eye-slash eye"></i>
                                <input type="password" class="show-hide form-control form-control-user" asp-for="@Model.Password">
                            </div>
                        </div>

                        <div class="form-group">
                            <span>Yeni şifrə təkrarı:</span>
                            <div class="group" >
                                <i class="fas fa-eye-slash eye"></i>
                                <input type="password" class="show-hide form-control form-control-user" asp-for="@Model.RepeatPassword">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">
                            Sıfırla
                        </button>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
