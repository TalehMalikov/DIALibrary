@*@model PasswordViewModel*@
@model AccountViewModel
@{
    Layout = "_PrivateOfficeLayout";
}
 <section id="account" class="py-2 d-flex">
        <div class="container">
            <div class="row justify-content-center">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="p-lg-5 p-sm-2">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-2 title-forgot">Şifrənizi Dəyişin</h1>
                        </div>
                        <form class="user" method="post" asp-action="ChangePassword" asp-controller="Authentication">
                            <div class="form-group group">
                                <span>Köhnə şifrə:</span>
                                <div class="group">
                                    <i class="fas fa-eye-slash eye"></i>
                                    <input asp-for="ChangePassword.OldPassword" type="password" class="show-hide form-control form-control-user"
                                        data-val="true" data-val-required="The OldPassword field is required."
                                        id="ChangePassword_OldPassword"  name="ChangePassword.OldPassword">
                                </div>
                            </div>

                            <div class="form-group group">
                                <span>Yeni şifrə:</span>
                                <div class="group">
                                    <i class="fas fa-eye-slash eye"></i>
                                    <input asp-for="ChangePassword.Password" type="password" class="show-hide form-control form-control-user"
                                        data-val="true" data-val-required="The Password field is required."
                                        id="ChangePassword_Password" name="ChangePassword.Password">
                                </div>
                            </div>

                            <div class="form-group">
                                <span>Yeni şifrə təkrarı:</span>
                                <div class="group">
                                    <i class="fas fa-eye-slash eye"></i>
                                    <input asp-for="ChangePassword.RepeatPassword" type="password" class="show-hide form-control form-control-user"
                                        data-val="true" data-val-required="The RepeatPassword field is required."
                                        id="ChangePassword_RepeatPassword" name="ChangePassword.RepeatPassword">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block my-2">
                                Yadda saxla
                            </button>
                            <input name="__RequestVerificationToken" type="hidden"
                                value="CfDJ8FFxb1pR_cBImSokj7nW58vrCza5FLbCCSpU6pRYnd05xQwwXUUM4nVXrBBEAS1MLqxjy3IBxgEHTGu5ullS7uRL8mBPJe6DFRPs4IrJHVPHhrQWZ9CDX3OODmjO-IozSEiKF90lMs_7ofGnTmXMvZ0" />
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </section>

<script src="~/js/password.js"></script>
