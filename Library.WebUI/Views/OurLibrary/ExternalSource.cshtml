@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model ExternalSourceViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<body>
    @section navbar_bottom{
    <section id="navbottom">
            
           <div class="container-lg">
                <nav class="navbar-down">
            
               <a class="btn btn-menu red" asp-action="Index" asp-controller="Home">
                   Ana səhifə
               </a>

               <div class="dropdown">
                   <a class="btn btn-menu dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                   data-bs-toggle="dropdown" aria-expanded="false">
                   Bizim kitabxana
                   </a>

               <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                   <li><a class="dropdown-item" href="@Url.Action("MoreInfo","OurLibrary")">Ümumi məlumat</a></li>
                   <li><a class="dropdown-item" href="@Url.Action("ExternalSource","OurLibrary")">Digər kitabxanalar</a></li>
                   <li><a class="dropdown-item" href="news.html">Yeniliklər</a></li>
               </ul>
            
           </div>
            
         <div class="dropdown">
            
               <a class="btn btn-menu dropdown-toggle" role="button" id="dropdownMenuLink"
               data-bs-toggle="dropdown" aria-expanded="false" asp-action="Index" asp-controller="Category">
               E-Kitabxana
               </a>

           <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
               <li><a class="dropdown-item" href="category.html">E-Kataloq</a></li>
               <li><a class="dropdown-item" asp-action="Index" asp-controller="Category">E-Kitablar</a></li>
               <li class="sub"><a class="dropdown-item" href="#">E-Resurslar ></a></li>
               
               <ul class="submenu">
                   <li><a class="dropdown-item" href="#">Kitablar</a></li>
            
                   <li><a class="dropdown-item" href="#">Məqalələr</a></li>
            
                   <li><a class="dropdown-item" href="#">Avtoreferatlar</a></li>
            
                   <li><a class="dropdown-item" href="#">Jurnallar</a></li>
            
                   <li><a class="dropdown-item" href="#">Dərsliklər</a></li>
               </ul>
            
           </ul>

         </div>

                @{
                      if(!string.IsNullOrEmpty(HttpContextAccessor?.HttpContext?.Session.GetString("AccessToken")))
                      {
                          <a class="btn btn-menu modal-btn" asp-action="Index" asp-controller="PrivateOffice">
                              Şəxsi kabinet
                          </a>
                      }
                      else
                      {
                          <a class="btn btn-menu modal-btn" href="#">
                              Giriş
                          </a>
                      }
                }

           </nav>
        </div>
    </section>
    }


    <section id="otherLib" class="other-lib" class="py-4">
        <div class="container-lg">
            <h3 class="pt-4">Digər kitabxanalar</h3>
            <hr>

            @foreach(var item in Model.ExternalSourceList.Data)
            {
                   <div class="other-lib-div d-flex">
                     <a href="#" class="lib-img">
                         <img src="@Url.Action("Picture","Resources", new { name = item.PhotoPath })">
                         <div class="overlay">
                             <i class="fas fa-link"></i>
                         </div>
                     </a>
            
                     <div class="lib-txt mx-3 my-1">
                         <h5 class="text-bold">@item.Name</h5>
                         <a href="@item.SourceLink" class="lib-url text-danger">@item.SourceLink</a>
                     </div>
                   </div>  
                   <hr>
            }
        </div>
    </section>

    <!-- MODAL LOGIN! -->
    <div class="modal-bg">
        <div class="login-page py-4">

            <form action="">
            <img src="img/logo.png">
            <h3 class="pb-2">Şəxsi kabinet</h3>
            <input type="text" class="login-input mb-2" placeholder="EMAIL">
            <input type="text" class="login-input mb-2" placeholder="ŞIFRƏ">
            <a href="#">Şifrəmi Unuttum?</a>
            <a href="account.html"><input type="button" class="btn btn-primary m-2" value="Daxil Ol"></a> 
            
            <input type="button" class="btn btn-secondary mb-2 close" value="Geri">
            </form>
        </div>
    </div>

    <div class="modalbackdrop"></div>
    
    <!-- Button ScrollTop -->
    <div class="top-btn">
        <i class="fas fa-arrow-alt-up"></i>
    </div>
    <script src="js/modal.js"></script>
    <script src="js/e-books.js"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
</body>